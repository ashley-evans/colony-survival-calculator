{
    "name": "@colony-survival-calculator/root",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "i": "npx lerna bootstrap --no-ci",
        "ci": "npx lerna bootstrap --ci",
        "clean": "rm -rf `find . -type d -name node_modules`",
        "lint": "npmPkgJsonLint .",
        "validate": "./scripts/validate-terraform.sh -r ./infra/",
        "format:check": "npx prettier --check . '!(api|ui)/**/*'",
        "format:write": "npx prettier --write . '!(api|ui)/**/*'",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "husky": "^8.0.3",
        "lerna": "^6.5.1",
        "npm-package-json-lint": "^6.4.0",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    }
}
