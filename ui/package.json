{
    "name": "@colony-survival-calculator/ui",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "dev:open": "vite --open",
        "build": "run -T tsc && vite build",
        "deploy": "./scripts/deploy.sh",
        "deploy:plan": "./scripts/deploy.sh -d",
        "preview": "vite preview",
        "validate": "../scripts/validate-terraform.sh -r ./infra/",
        "format:check": "run -T prettier --check . && terraform fmt -recursive -check -diff ./infra/",
        "format:write": "run -T prettier --write . && terraform fmt -recursive ./infra/",
        "lint": "run -T eslint --max-warnings 0 . ",
        "lint:packages": "run -T npmPkgJsonLint .",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "generate": "graphql-codegen --config ./codegen.ts",
        "postinstall": "yarn generate"
    },
    "dependencies": {
        "@apollo/client": "4.0.11",
        "@fontsource/roboto-mono": "5.2.8",
        "@fortawesome/fontawesome-svg-core": "7.1.0",
        "@fortawesome/free-brands-svg-icons": "7.1.0",
        "@fortawesome/free-solid-svg-icons": "7.1.0",
        "@fortawesome/react-fontawesome": "3.1.1",
        "@nivo/core": "0.99.0",
        "@nivo/sankey": "0.99.0",
        "@smithy/signature-v4": "5.3.7",
        "aws-amplify": "6.15.9",
        "downshift": "9.0.13",
        "graphql": "16.12.0",
        "immutability-helper": "3.1.1",
        "normalize.css": "8.0.1",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-router-dom": "7.11.0",
        "styled-components": "6.1.19",
        "url": "0.11.4",
        "use-debounce": "10.0.6"
    },
    "devDependencies": {
        "@colony-survival-calculator/api": "workspace:^",
        "@graphql-codegen/cli": "^6.1.0",
        "@graphql-codegen/client-preset": "^5.2.2",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/styled-components": "^5.1.36",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-refresh": "^0.4.26",
        "jsdom": "^27.4.0",
        "msw": "^2.12.7",
        "vite": "^7.3.0",
        "vitest": "^4.0.16"
    }
}
