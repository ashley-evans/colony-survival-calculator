{
    "name": "@colony-survival-calculator/ui",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:open": "vite --open",
        "build": "tsc && vite build",
        "deploy": "./scripts/deploy.sh",
        "deploy:plan": "./scripts/deploy.sh -d",
        "preview": "vite preview",
        "validate": "./scripts/validate-json.sh && ../scripts/validate-terraform.sh -r ./infra/",
        "format:check": "npx prettier --check . && terraform fmt -recursive -check -diff ./infra/",
        "format:write": "npx prettier --write . && terraform fmt -recursive ./infra/",
        "lint": "eslint .",
        "lint:packages": "npmPkgJsonLint .",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "generate": "json2ts -i 'src/schemas/*.json' -o src/types/generated/",
        "postinstall": "npm run generate"
    },
    "resolutions": {
        "styled-components": "^5"
    },
    "dependencies": {
        "@fontsource/roboto-mono": "4.5.10",
        "@fortawesome/free-brands-svg-icons": "6.3.0",
        "@fortawesome/free-solid-svg-icons": "6.3.0",
        "@fortawesome/react-fontawesome": "0.2.0",
        "ajv": "8.12.0",
        "axios": "1.2.3",
        "normalize.css": "8.0.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.8.1",
        "styled-components": "5.3.8"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.9",
        "@types/styled-components": "^5.1.26",
        "@vitejs/plugin-react": "^3.1.0",
        "eslint-plugin-react": "^7.32.1",
        "jsdom": "^21.1.0",
        "json-schema-to-typescript": "^11.0.3",
        "msw": "^1.1.0",
        "vite": "^4.1.4",
        "vitest": "^0.28.5"
    }
}
