{
    "name": "@colony-survival-calculator/ui",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:open": "vite --open",
        "build": "run -T tsc && vite build",
        "deploy": "./scripts/deploy.sh",
        "deploy:plan": "./scripts/deploy.sh -d",
        "preview": "vite preview",
        "validate": "../scripts/validate-terraform.sh -r ./infra/",
        "format:check": "run -T prettier --check . && terraform fmt -recursive -check -diff ./infra/",
        "format:write": "run -T prettier --write . && terraform fmt -recursive ./infra/",
        "lint": "run -T eslint --max-warnings 0 . ",
        "lint:packages": "run -T npmPkgJsonLint .",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "generate": "graphql-codegen --config ./codegen.ts",
        "postinstall": "yarn generate"
    },
    "dependencies": {
        "@apollo/client": "4.0.3",
        "@fontsource/roboto-mono": "5.2.6",
        "@fortawesome/fontawesome-svg-core": "7.0.0",
        "@fortawesome/free-brands-svg-icons": "7.0.0",
        "@fortawesome/free-solid-svg-icons": "7.0.0",
        "@fortawesome/react-fontawesome": "3.0.1",
        "@nivo/core": "0.99.0",
        "@nivo/sankey": "0.99.0",
        "aws-amplify": "6.15.5",
        "aws-appsync-auth-link": "3.0.7",
        "downshift": "9.0.10",
        "graphql": "16.11.0",
        "immutability-helper": "3.1.1",
        "normalize.css": "8.0.1",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "react-router-dom": "7.8.2",
        "styled-components": "6.1.19",
        "url": "0.11.4",
        "use-debounce": "10.0.5"
    },
    "devDependencies": {
        "@colony-survival-calculator/api": "workspace:^",
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/client-preset": "^4.8.3",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@types/styled-components": "^5.1.34",
        "@vitejs/plugin-react": "^5.0.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-refresh": "^0.4.20",
        "jsdom": "^26.1.0",
        "msw": "^2.10.5",
        "vite": "^7.1.3",
        "vitest": "^3.2.4"
    }
}
