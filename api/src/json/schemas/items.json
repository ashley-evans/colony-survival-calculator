{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "items.json",
    "title": "Items",
    "description": "An array of all items that can be constructed in Colony Survival",
    "type": "array",
    "items": {
        "title": "Item",
        "description": "A item that can be constructed in Colony Survival",
        "type": "object",
        "properties": {
            "id": {
                "description": "The ID of the item",
                "type": "string"
            },
            "createTime": {
                "description": "The number of seconds it takes to create the item",
                "type": "number",
                "minimum": 0
            },
            "output": {
                "description": "The number of items produced every create",
                "type": "number",
                "minimum": 1
            },
            "requires": {
                "title": "Requirements",
                "description": "The required items needed to create the item",
                "type": "array",
                "items": {
                    "title": "Requirement",
                    "type": "object",
                    "properties": {
                        "id": {
                            "description": "The ID of the required item",
                            "type": "string"
                        },
                        "amount": {
                            "description": "The amount of the required item needed",
                            "type": "number",
                            "minimum": 1
                        }
                    },
                    "required": ["id", "amount"],
                    "additionalProperties": false
                }
            },
            "toolset": {
                "$ref": "toolset.json"
            },
            "creatorID": {
                "description": "The ID of the profession that creates this item",
                "type": "string"
            },
            "optionalOutputs": {
                "description": "Optional outputs that can be created at the same time as this item",
                "type": "array",
                "items": {
                    "title": "OptionalOutput",
                    "type": "object",
                    "properties": {
                        "id": {
                            "description": "The ID of the optional output item",
                            "type": "string"
                        },
                        "amount": {
                            "description": "The amount of the optional output produced",
                            "type": "number",
                            "minimum": 1
                        },
                        "likelihood": {
                            "description": "The likelihood this optional output item will be produced",
                            "type": "number",
                            "exclusiveMinimum": 0,
                            "maximum": 1
                        }
                    },
                    "required": ["id", "amount", "likelihood"],
                    "additionalProperties": false
                }
            },
            "size": {
                "description": "Optimal size of crafting area, only provided for farms",
                "type": "object",
                "properties": {
                    "width": {
                        "description": "The optimal width of the farm",
                        "type": "number",
                        "minimum": 1
                    },
                    "height": {
                        "description": "The optimal height of the farm",
                        "type": "number",
                        "minimum": 1
                    }
                },
                "required": ["width", "height"],
                "additionalProperties": false
            },
            "i18n": {
                "description": "Translations for this item, keyed by language code",
                "type": "object",
                "properties": {
                    "name": {
                        "description": "The translated names for this item",
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "creator": {
                        "description": "The translated creator names for this item",
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                },
                "required": ["name", "creator"],
                "additionalProperties": false
            }
        },
        "required": [
            "id",
            "createTime",
            "output",
            "requires",
            "toolset",
            "creatorID",
            "i18n"
        ],
        "additionalProperties": false
    }
}
