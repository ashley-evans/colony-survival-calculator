{
    "name": "@colony-survival-calculator/api",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "postinstall": "npm run generate",
        "build": "tsc --project tsconfig.build.json",
        "build:clean": "rm -rf ./dist && npm run build",
        "deploy": "./scripts/deploy.sh",
        "deploy:plan": "./scripts/deploy.sh -d",
        "validate:json": "./scripts/validate-json.sh",
        "validate:terraform": "../scripts/validate-terraform.sh -r ./infra/",
        "validate": "npm run validate:json && npm run validate:terraform",
        "format:check": "npx prettier --check . && terraform fmt -recursive -check -diff ./infra/",
        "format:write": "npx prettier --write . && terraform fmt -recursive ./infra/",
        "lint": "eslint .",
        "test": "jest",
        "test:watch": "jest --watch",
        "generate:json-schema-types": "json2ts -i 'src/json/schemas/*.json' -o src/types/generated/",
        "generate:graphql-schema-types": "npx graphql-codegen --config ./codegen.ts",
        "generate": "npm run generate:json-schema-types && npm run generate:graphql-schema-types"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^3.2.1",
        "@graphql-codegen/typescript": "^3.0.1",
        "@tsconfig/node18-strictest": "^1.0.0",
        "@types/aws-lambda": "^8.10.111",
        "@types/jest": "^29.4.0",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.17.10",
        "graphql": "^16.6.0",
        "jest": "^29.4.3",
        "jest-mock-extended": "^3.0.3",
        "json-schema-to-typescript": "^12.0.0",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    }
}
