{
    "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node22/tsconfig"],
    "compilerOptions": {
        "outDir": "dist",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": false,
        "isolatedModules": false,
        "moduleResolution": "bundler",
        "module": "es2022",
        "types": ["node", "vitest/globals"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./dist/**/*"]
}
