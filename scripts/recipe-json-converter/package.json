{
    "name": "@colony-survival-calculator/recipe-json-converter",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "build": "run -T tsc --noEmit --project tsconfig.json",
        "convert": "tsx ./index.ts",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "format:check": "run -T prettier --check .",
        "format:write": "run -T prettier --write .",
        "lint": "run -T eslint --max-warnings 0 .",
        "generate": "./generate-types.sh",
        "postinstall": "yarn generate"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@tsconfig/strictest": "^2.0.5",
        "@types/yargs": "^17.0.33",
        "json-schema-to-typescript": "^15.0.4",
        "tsx": "^4.20.5",
        "vitest": "^3.2.4",
        "vitest-when": "^0.8.0"
    },
    "dependencies": {
        "ajv": "8.17.1",
        "strip-json-comments": "5.0.3",
        "yargs": "18.0.0"
    }
}
