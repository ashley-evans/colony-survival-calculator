        "postinstall": "yarn generate"
    },
    "devDependencies": {
        "@tsconfig/node18": "^18.2.1",
        "@tsconfig/strictest": "^2.0.1",
        "@types/jest": "^29.5.4",
        "@types/jest-when": "^3.5.2",
        "@types/yargs": "^17.0.24",
        "jest": "^29.6.4",
        "jest-when": "^3.6.0",
        "json-schema-to-typescript": "^13.1.1",
        "ts-jest": "^29.1.1",
        "tsx": "^3.12.8"
    },
    "dependencies": {
        "ajv": "8.12.0",
        "strip-json-comments": "3.1.1",
        "yargs": "17.7.2"
    }
}
