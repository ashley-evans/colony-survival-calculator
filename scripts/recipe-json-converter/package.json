{
    "name": "@colony-survival-calculator/recipe-json-converter",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "build": "run -T tsc --noEmit --project tsconfig.build.json",
        "convert": "tsx ./index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "format:check": "run -T prettier --check .",
