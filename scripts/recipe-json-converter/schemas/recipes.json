{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "cooldown": { "type": "number" },
            "name": { "type": "string" },
            "requires": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": { "type": "string" },
                        "amount": { "type": "number" }
                    },
                    "required": ["type"]
                }
            },
            "result": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": { "type": "string" },
                        "amount": { "type": "number" },
                        "isOptional": { "type": "boolean" },
                        "chance": { "type": "number" }
                    }
                },
                "required": ["type"]
            }
        },
        "required": ["cooldown", "name", "requires", "result"]
    }
}
